{
    "name": "leben-in-deutschland-blog-generator",
    "runArgs": [
        "--userns=keep-id:uid=1000,gid=1000"
    ],
    "containerUser": "node",
    "updateRemoteUserUID": true,
    "postCreateCommand": "bash ./.devcontainer/generator/postCreateCommand.sh",
    // "workspaceFolder": "/workspaces/leben-in-deutschland-blog/tools/generate-blogs",
    "containerEnv": {
        "HOME": "/home/node"
    },
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "shardulm94.trailing-spaces",
                "IBM.output-colorizer",
                "esbenp.prettier-vscode",
                "GitHub.copilot",
                "ms-vscode-remote.remote-containers"
            ]
        }
    },
    "remoteUser": "root",
    "features": {
        "ghcr.io/devcontainers/features/git:1": "os-provided"
    },
    "remoteEnv": {
        "DISPLAY": ":0"
    }
}